<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Money Converter{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Money Converter</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {{ app.request.attributes.get('_route') == 'index' ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('index') }}">
                            Home
                            {% if app.request.attributes.get('_route') == 'index' %}
                                <span class="sr-only">(current)</span>
                            {% endif %}
                        </a>
                    </li>
                    <li class="nav-item" {{ app.request.attributes.get('_route') == 'calculator' ? 'active' : '' }}>
                        <a class="nav-link" href="{{ path('calculator') }}">
                            Calculator
                            {% if app.request.attributes.get('_route') == 'calculator' %}
                                <span class="sr-only">(current)</span>
                            {% endif %}
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <main role="main" class="container">
            <div class="m-5">
                {% block body %}{% endblock %}
            </div>
        </main>
    </body>
</html>
